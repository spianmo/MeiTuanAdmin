{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "path": {
    "@": ["src/*"]
  },
  "exclude": [
    "dist"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
